<style>
    body {
        margin: 0;
        color: #333;
        text-align: center;
    }

    main {
        max-width: 1200px;
        margin: auto;
        padding: 2em;
    }

	.big-image {
		display: block;              /* Ensure the image behaves as a block element */
    margin-left: auto;          /* Center the image horizontally */
    margin-right: auto;         /* Center the image horizontally */
    width: 50%;                 /* Adjust the width as needed */
    height: auto;               /* Maintain aspect ratio */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5); /* Optional shadow */
    border-radius: 50px;         /* Optional: round the corners */
}

    h1 {
        font-size: 3.5em;
		padding-top: 0.5em;
        color: #4a4a4a;
    }

    p.centered {
        text-align: center;
        width: 100%;
    }

    .president-grid-container {
        display: block;              /* Ensure the image behaves as a block element */
        margin-left: auto;          /* Center the image horizontally */
        margin-right: auto;         /* Center the image horizontally */
        margin-bottom: 1em;

        height: auto;               /* Maintain aspect ratio */
        border-radius: 8px;         /* Optional: round the corners */
        min-width: 360px;
    }

    .grid-container {
        display: grid;
        gap: 20px;
        min-width: 400px;
    }

    .card {
        display: flex;
        flex-direction: column;
        /* justify-content: space-between; */
        align-items: center;
        background-color: rgba(255, 255, 255, 0.7);
        border: 1px solid #e0e0e0;
        border-radius: 50px;
        padding: 1em;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
    }

    /*.card:hover {
        transform: translateY(-5px);
    }*/

    .profile-image {
        display: block;              /* Ensure the image behaves as a block element */
        margin-left: auto;          /* Center the image horizontally */
        margin-right: auto;
        /* Center the image horizontally */
        width: 250px;
        height: 250px;
        border-radius: 50%; /* Makes the image circular */
    }

    .contact {
        margin-top: auto;
        text-align: center;
        width: 100%;
    }

    .contact a {
        color: #f180a1; /* Blue color for links */
        text-decoration: none;
    }

    .contact a:hover {
        text-decoration: underline;
    }

    .contact-button {
        display: inline-block;
        padding: 10px 20px;
        font-size: 1em;
        background-color: #f180a1; /* Button color */
        color: white;
        border-radius: 8px;
        text-decoration: none;
        text-align: center;
        margin-top: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Optional shadow */
        transition: background-color 0.3s ease;
    }

    .contact-button:hover {
        background-color: #f36a93; /* Darker color on hover */
    }

    .divider {
        height: 5px;
        width: 90%;
        background-color: #f180a1;
        border-radius: 8px;
        margin-bottom: 10px;
        opacity: 0.2;
    }
</style>

