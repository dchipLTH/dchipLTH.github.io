---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import Body from '../../components/Body.astro';
import { text } from '../../content/text/sv/files.ts';
---

<!DOCTYPE html>
<Body>
    <main>
        <!-- Title and description -->
        <section class="mb-8 text-center">
            <div class="container">
            <h1>{text.title}</h1>
            <div class="divider"></div>
            <p>
                {text.info} <a href="mailto:d-chipstyrelse@dsek.se" class="text-[#f180a1] underline">d-chipstyrelse@dsek.se</a>.
            </p>
        </div>
        </section>

        <!-- Current Year Documents Section -->
        <section class="mb-12">
            <h2><span>{text.currentDocuments}</span></h2>
            <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                <li class="bg-white bg-opacity-70 rounded-lg shadow p-6 text-center transition">
                    <h3 class="text-2xl font-semibold text-[#484647] mb-4">{text.meetingDocumentsVTM}</h3>
                    <a href="https://drive.google.com/drive/folders/1xhZx-yynuLD0eSm02amLaYa8qnZWxaD6?usp=drive_link" class="contact-button">{text.showDocuments}</a>
                </li>
                <li class="bg-white bg-opacity-70 rounded-lg shadow p-6 text-center transition">
                    <h3 class="text-2xl font-semibold text-[#484647] mb-4">{text.meetingDocumentsHTM}</h3>
                    <a href="https://drive.google.com/drive/folders/1py3XISXOdSbHyoG49Q5QHaMJ-CDzzWkG?usp=drive_link" class="contact-button">{text.showDocuments}</a>
                </li>
                <li class="bg-white bg-opacity-70 rounded-lg shadow p-6 text-center transition">
                    <h3 class="text-2xl font-semibold text-[#484647] mb-4">{text.meetingDocumentsBoard}</h3>
                    <a href="https://drive.google.com/drive/folders/1O5x_OaMSy8yo4U5HS07Q5wK04qZ3jf2J?usp=drive_link" class="contact-button">{text.showDocuments}</a>
                </li>
            </ul>
        </section>

        <!-- Official Documents Section -->
        <section class="mb-12">
            <h2><span>{text.policyDocuments}</span></h2>
            <ul class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <li class="bg-white bg-opacity-70 rounded-lg shadow p-6 text-center transition">
                    <h3 class="text-2xl font-semibold text-[#484647] mb-4">{text.bylaws}</h3>
                    <a href="https://drive.google.com/file/d/1uhLWTYZtaf4BfmoEefbhsfUvz0KQ3bKX/view?usp=drive_link" 
                       class="contact-button">{text.showPDF}</a>
                </li>
                <li class="bg-white bg-opacity-70 rounded-lg shadow p-6 text-center transition">
                    <h3 class="text-2xl font-semibold text-[#484647] mb-4">{text.regulations}</h3>
                    <a href="https://drive.google.com/file/d/1nL27N0Jnkq0_jDTIU2qRK3rqWoThqQNL/view?usp=sharing" class="contact-button">{text.showPDF}</a>
                </li>
            </ul>
        </section>

        <!-- Archive Section -->
        <section>
            <h2><span>{text.archive}</span></h2>
            <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 gap-6">
                <li class="bg-white bg-opacity-70 rounded-lg shadow p-6 text-center transition">
                    <h3 class="text-2xl font-semibold text-[#484647] mb-4">{text.boardMeetings}</h3>
                    <a href="https://drive.google.com/drive/folders/15XqL8Z2PxC0nE6qgVWBlKu0py3fdJBr0?usp=drive_link" class="contact-button">{text.showDocuments}</a>
                </li>
                <li class="bg-white bg-opacity-70 rounded-lg shadow p-6 text-center transition">
                    <h3 class="text-2xl font-semibold text-[#484647] mb-4">{text.meetingDocuments}</h3>
                    <a href="https://drive.google.com/drive/folders/1SL6xMapYWLWhOW5Q0ACc5pVm32lo4d-n?usp=drive_link" class="contact-button">{text.showDocuments}</a>
                </li>
                <li class="bg-white bg-opacity-70 rounded-lg shadow p-6 text-center transition">
                    <h3 class="text-2xl font-semibold text-[#484647] mb-4">{text.economy}</h3>
                    <a href="path_to_pdf.pdf" class="contact-button">Visa dokument</a>
                </li>
                <li class="bg-white bg-opacity-70 rounded-lg shadow p-6 text-center transition">
                    <h3 class="text-2xl font-semibold text-[#484647] mb-4">{text.activityReport}</h3>
                    <a href="https://drive.google.com/drive/folders/1UhpVvcoxz6b1jGy_XYSorPs70wqzj77N?usp=drive_link" class="contact-button">{text.showDocuments}</a>
                </li>
            </ul>
        </section>
    </main>
</Body>
</html>

<style>
    h2 {
        margin: 1.5em 0 1em;
    }
    h2 span {
        background-color: rgba(255, 255, 255, 0.7); /* Optional background for contrast */
        border-radius: 8px; /* Optional: round the corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); /* Optional shadow */
        padding: 10px 20px;
    }
    li {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); /* Optional shadow */
    }
</style>
