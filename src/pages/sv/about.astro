---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { MAIL } from '../../consts';
import en from '../../locales/en.json';
import sv from '../../locales/sv.json';


// Extract the language from the first segment of the URL path
const pathParts = Astro.url.pathname.split('/');
const lang = pathParts[1] || 'sv'; // Default to 'en' if no language is specified

// Set the appropriate translations based on the language
const translations = lang === 'en' ? en : sv;

const president = [
{
    name: "Linnea Sandsjö",
	position: "Ordförande",
    class: "C22",
    description: "Som ordförande är man den som styr och håller i möten, har kontakten inom gruppen och externt. Man är också den som är mer drivande, ser till att allt hänger samman och delegerar arbetet.",
    contact: "ordforande@dsek.se",
    image: "/images/board/linnea.png" // Add the actual image path
  }
]
const teamMembers = [
  {
    name: "Hanna Arendt",
	position: "Vice Ordförande",
    class: "C23",
    description: "Som vice ordförande är man ordförandes högra hand och representerar D-chip i ordförandens frånvaro. Man hjälper till och bollar idéer med styrelsen, lär känna D-chips medlemmar och hittar på mycket annat skoj tillsammans med både styrelsen och medlemmarna.",
    contact: "d-chipvordforande@dsek.se",
    image: "/images/board/hanna.jpg" // Add the actual image path
  },
  {
    name: "Ylva Lengborg",
	position: "Eventansvarig",
    class: "C23",
