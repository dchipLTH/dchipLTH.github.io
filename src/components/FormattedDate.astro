---
interface Props {
	date: Date;
}

const { date } = Astro.props;

// Format the date as YYYY-MM-DD for the datetime attribute
const datetimeFormatted = date.toISOString().split('T')[0]; // Get the date in YYYY-MM-DD format

// Format for display as DD/MM/YYYY (without time)
const displayFormatted = date.toLocaleString('en-GB', {
    day: '2-digit',
    month: '2-digit',
});

---

<time datetime={datetimeFormatted}>
	{displayFormatted}
</time>
